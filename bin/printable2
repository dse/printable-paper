#!/usr/bin/env perl
use warnings;
use strict;
use v5.10.0;

use Carp::Always;

use FindBin;
use lib "${FindBin::Bin}/../lib";
use My::Printable::Document;
use My::Printable::Element::Grid;
use My::Printable::Element::Lines;

my $doc = My::Printable::Document->new();
$doc->setUnit("1/4in");
$doc->setLeftMargin("3.5unit");
$doc->setRightMargin("3.5unit");
$doc->setTopMargin("3.5unit");
$doc->setBottomMargin("3.5unit");

my $grid = My::Printable::Element::Grid->new(
    document => $doc,
    id => "grid",
    cssClass => "blue stroke-6",
    x1 => "1in from left",
    x2 => "1in from right",
    y1 => "1in from bottom",
    y2 => "1in from top",
);
$grid->setSpacingX("1unit");
$grid->setSpacingY("1/3unit");
$grid->isDottedLineGrid(1);
$grid->horizontalDots(6);
$grid->verticalDots(2);

my $grid2 = My::Printable::Element::Grid->new(
    document => $doc,
    id => "grid2",
    cssClass => "blue stroke-10",
    x1 => "1in from left",
    x2 => "1in from right",
    y1 => "1in from bottom",
    y2 => "1in from top",
);
$grid2->setSpacingX("1unit");
$grid2->setSpacingY("1/3unit");
$grid2->horizontalDots(6);
$grid2->verticalDots(2);
# $grid2->isDotGrid(1);

my $lines = My::Printable::Element::Lines->new(
    document => $doc,
    id => "lines",
    cssClass => "blue stroke-3"
);
$lines->setSpacing("1unit");

$doc->appendElement($grid);
# $doc->appendElement($grid2);
$doc->appendElement($lines);

$doc->printToFile('printable2/grid.xml');
